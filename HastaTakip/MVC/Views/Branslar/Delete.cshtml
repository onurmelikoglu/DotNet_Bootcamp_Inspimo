﻿
@model BransModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Branş Silme";
}

<div class="container">

    <h1>@ViewData["Title"]</h1>

    <h3>Branşı silmek istediğinize emin misiniz?</h3>
    <div>
        <h4>Branş</h4>
        <hr />
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Adi)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Adi)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.DoktorlarOutput)
            </dt>
            <dd class="col-10">
                @Html.Raw(Model.DoktorlarOutput)
            </dd>
        </dl>
    
        <form asp-action="Delete">
	    @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Evet" class="btn btn-danger" />&nbsp;&nbsp;
            <a asp-action="Index" class="btn btn-success">Hayır</a>
        </form>
    </div>

</div>